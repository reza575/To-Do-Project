<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_fragmentHome_toolcar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO - DO - App "
                android:layout_alignParentLeft="true"/>


        </RelativeLayout>

        <ImageButton
            android:id="@+id/img_fragmenthome_slider"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <RelativeLayout
            android:id="@+id/rel_fragmenthome_todo"
            android:layout_below="@id/img_fragmenthome_slider"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To-Do List"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fragmenthome_lastnews"
            android:layout_below="@id/rel_fragmenthome_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</androidx.core.widget.NestedScrollView>